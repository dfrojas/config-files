# Define Colors
USER_COLOR="%F{violet}"
RESET="%f"
ARROW_COLOR="%F{green}"
PATH_COLOR="%F{cyan}"

# Set the prompt
PROMPT="${USER_COLOR}%n@%m${RESET} ${PATH_COLOR}%~${RESET} ${ARROW_COLOR}➜ ${RESET} $(git_prompt_info)"


ZSH_THEME_GIT_PROMPT_PREFIX="%F{blue}git:(%F{red}"
ZSH_THEME_GIT_PROMPT_SUFFIX="%f) "
ZSH_THEME_GIT_PROMPT_DIRTY="%F{yellow}✗%f"
ZSH_THEME_GIT_PROMPT_CLEAN=""